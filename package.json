{
  "name": "@auto-palette/monorepo",
  "description": "Monorepo for auto-palette, extract prominent color palette from your image automatically",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "prepare": "lefthook install",
    "format": "pnpm format:biome && pnpm format:cargo && pnpm format:taplo",
    "format:biome": "biome format --write .",
    "format:cargo": "cargo +nightly fmt --all",
    "format:taplo": "taplo format",
    "lint": "biome lint ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@taplo/cli": "0.7.0",
    "@types/node": "catalog:",
    "lefthook": "2.1.0",
    "rimraf": "6.1.2",
    "typescript": "catalog:",
    "vite-plugin-wasm": "3.5.0",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": "10.29.1"
  },
  "packageManager": "pnpm@10.29.1"
}
