{
  "name": "@auto-palette/monorepo",
  "description": "Monorepo for auto-palette, extract prominent color palette from your image automatically",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "format": "pnpm format:biome && pnpm format:cargo && pnpm format:taplo",
    "format:biome": "biome format --write .",
    "format:cargo": "cargo +nightly fmt --all",
    "format:taplo": "taplo format",
    "lint": "biome lint ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@taplo/cli": "^0.7.0",
    "@types/node": "^22.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite-plugin-wasm": "^3.4.1",
    "vitest": "^3.1.1"
  },
  "lint-staged": {
    "*.{js,ts,json}": ["biome format --write"],
    "*.toml": ["taplo format"],
    "*.rs": ["cargo +nightly fmt --all --"]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": "10.11.0"
  },
  "packageManager": "pnpm@10.11.0",
  "pnpm": {
    "overrides": {
      "axios@>=0.8.1 <0.28.0": ">=0.28.0",
      "axios@<0.30.0": ">=0.30.0",
      "vite@>=6.2.0 <6.2.6": ">=6.2.6",
      "vite@>=6.3.0 <=6.3.3": ">=6.3.4",
      "brace-expansion@>=1.0.0 <=1.1.11": ">=1.1.12",
      "brace-expansion@>=2.0.0 <=2.0.1": ">=2.0.2"
    }
  }
}
